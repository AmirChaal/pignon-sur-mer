{% extends 'base.html.twig' %}
{% block title %}Se connecter{% endblock %}
{% block meta %}
    <meta name="robots" content="index,nofollow"/>
    <meta name="description" content="Connectez vous"/>
{% endblock %}
{% block stylesheet %} {{ asset('css/login.css') }} {% endblock %}

{% block body %}

<div class="wrapper">
    <div class="container">
        <h2>Connectez vous</h2>
        <form method="post">
            {% if error %}
                <div style="color: darkred">{#{{ error.messageKey|trans(error.messageData, 'security') }}#}Email ou mot de passe invalide</div>
            {% endif %}

            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            <input type="hidden" name="_target_path" value="{{ app.request.headers.get('referer') }}">


            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

            <button class="button" type="submit">Se connecter</button>

        </form>
    </div>

    <div class="container">Pas encore de compte ?<a id="register" href="{{ path('app_register') }}">S'inscrire</a></div>

</div>
{% endblock %}
