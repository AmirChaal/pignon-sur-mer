{% extends 'base.html.twig' %}
{% block navbar %}
    <link rel="stylesheet" href="{{ asset('css/navbar.css') }}">

    <div id="navbar">
        <div id="navbar--content">
            <span id="logo"><a href="{{ path('app_accueil') }}"><img src="{{ asset('svg/logoBlack.svg') }}" alt="logo Pignon-sur-mer"></a></span>

            <nav>
                <ul>
                    <li><a href="{{ path('evenements') }}">Évènements</a></li>
                    <li><a href="{{ path('app_infos_pratiques') }}">Infos&nbsppratiques</a></li>
                    <li><a href="{{ path('app_contact') }}">Contact</a></li>
                </ul>
            </nav>

            <div id="picto--nav">
                <a href="{{ path('app_recherche') }}"><img src="{{ asset('svg/recherche.svg') }}" alt="bouton de recherche"></a>

                <a href="{{ path('app_panier') }}" id="container-panier"><img src="{{ asset('svg/panier.svg') }}" alt="bouton panier">
                    {% if app.request.attributes.get('_route') != 'app_panier' %}
                        <span id="panier">{{ app.session.get('panier')|length }}</span>
                    {% endif %}
                </a>
                {% if app.user %}
                    <a href="{{ path('app_profil') }}"><img src="{{ asset('svg/connexion.svg') }}" alt="bouton de profil"></a>
                {% else %}
                    <a href="{{ path('app_login') }}"><img src="{{ asset('svg/connexion.svg') }}" alt="bouton de profil"></a>
                {% endif %}

                <div id="link">
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('admin') }}">Admin</a>
                        <span> | </span>
                    {% endif %}

                    {% if app.user%}
                        <a href="{{ path('app_logout') }}">Logout</a>
                    {% endif %}
                </div>

            </div>
        </div>
    </div>

{% endblock %}